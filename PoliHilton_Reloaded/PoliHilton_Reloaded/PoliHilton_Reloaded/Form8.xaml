        <TextBlock HorizontalAlignment="Right" VerticalAlignment="Top" Text="X" TextWrapping="Wrap" Margin="0,3.493,8,0" FontSize="14.667" FontWeight="Bold" MouseLeftButtonDown="CloseForm"/>
        <Label Content="Name:" HorizontalAlignment="Left" Margin="30,60,0,0" VerticalAlignment="Top" Width="85" Style="{DynamicResource LabelStyle}"/>
        <Label Content="Number:" HorizontalAlignment="Left" Margin="250,60,0,0" VerticalAlignment="Top" Width="85" Style="{DynamicResource LabelStyle}"/>
        <Label Content="Floor:" HorizontalAlignment="Left" Margin="30,89,0,0" VerticalAlignment="Top" Width="85" Style="{DynamicResource LabelStyle}"/>
        <Label Content="Capacity:" HorizontalAlignment="Left" Margin="250,89,0,0" VerticalAlignment="Top" Width="85" Style="{DynamicResource LabelStyle}"/>
        <Label Content="Surface:" HorizontalAlignment="Left" Margin="30,118,0,0" VerticalAlignment="Top" Width="85" Style="{DynamicResource LabelStyle}"/>
        <Label Content="Orientation:" HorizontalAlignment="Left" Margin="250,118,0,0" VerticalAlignment="Top" Width="85" Style="{DynamicResource LabelStyle}"/>
        <Label Content="Check-in:" HorizontalAlignment="Left" Margin="30,160,0,0" VerticalAlignment="Top" Width="85" Style="{DynamicResource LabelStyle}"/>
        <Label Content="Check-out:" HorizontalAlignment="Left" Margin="250,160,0,0" VerticalAlignment="Top" Width="85" Style="{DynamicResource LabelStyle}"/>
        <Label Content="Price:" HorizontalAlignment="Left" Margin="115,196,0,0" VerticalAlignment="Top" Width="85" Style="{DynamicResource LabelStyle}"/>
        <Label Content="Discount:" HorizontalAlignment="Left" Margin="115,230,0,0" VerticalAlignment="Top" Width="85" Style="{DynamicResource LabelStyle}"/>
        <Label Content="Total:" FontWeight="Bold" HorizontalAlignment="Left" Margin="115,259,0,0" VerticalAlignment="Top" Width="85" Style="{DynamicResource LabelStyle}"/>
        <TextBox x:Name="form8_tb_roomName" Margin="115,65,248,248" Style="{DynamicResource TextBoxStyle}"/>
        <TextBox x:Name="form8_tb_roomNo" Margin="335,65,28,248" Style="{DynamicResource TextBoxStyle}"/>
        <TextBox x:Name="form8_tb_roomFloor" Margin="115,94,248,219" Style="{DynamicResource TextBoxStyle}"/>
        <TextBox x:Name="form8_tb_roomCap" Margin="335,94,28,219" Style="{DynamicResource TextBoxStyle}"/>
        <TextBox x:Name="form8_tb_roomSurface" Margin="115,123,248,190" Style="{DynamicResource TextBoxStyle}"/>
        <TextBox x:Name="form8_tb_roomOrientation" Margin="335,123,28,190" Style="{DynamicResource TextBoxStyle}"/>
        <TextBox x:Name="form8_tb_roomPrice" Margin="189,201,174,112" Style="{DynamicResource TextBoxStyle}"/>
        <TextBox x:Name="form8_tb_roomDisc" Margin="189,230,174,83" Style="{DynamicResource TextBoxStyle}"/>
        <TextBox x:Name="form8_tb_total" Margin="189,259,174,54" Style="{DynamicResource TextBoxStyle}"/>
        <DatePicker x:Name="form8_dtp_start" HorizontalAlignment="Left" Margin="115,160,0,0" VerticalAlignment="Top" Width="120"/>
        <DatePicker x:Name="form8_dtp_end" HorizontalAlignment="Left" Margin="335,160,0,0" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="form8_btn_reserve" Content="Reserve" HorizontalAlignment="Left" Margin="60,293,0,0" VerticalAlignment="Top" Width="140" Height="25" Background="#FF7BADCF"/>
        <Button x:Name="form8_btn_back" Content="Back" HorizontalAlignment="Left" Margin="290,293,0,0" VerticalAlignment="Top" Width="140" Height="25" Background="#FF7BADCF" Click="form8_btn_Back"/>
        <local:logout HorizontalAlignment="Left" Margin="436,26,0,0" VerticalAlignment="Top"/>
        <local:back_button HorizontalAlignment="Left" Margin="26,28,0,0" VerticalAlignment="Top"/>
    </Grid>
</Window>
