        <Label Content="Name:" HorizontalAlignment="Left" Margin="30,51,0,0" VerticalAlignment="Top" Width="85" Style="{DynamicResource LabelStyle}"/>
        <Label Content="Number:" HorizontalAlignment="Left" Margin="250,51,0,0" VerticalAlignment="Top" Width="85" Style="{DynamicResource LabelStyle}"/>
        <Label Content="Floor:" HorizontalAlignment="Left" Margin="30,80,0,0" VerticalAlignment="Top" Width="85" Style="{DynamicResource LabelStyle}"/>
        <Label Content="Capacity:" HorizontalAlignment="Left" Margin="250,80,0,0" VerticalAlignment="Top" Width="85" Style="{DynamicResource LabelStyle}"/>
        <Label Content="Surface:" HorizontalAlignment="Left" Margin="30,109,0,0" VerticalAlignment="Top" Width="85" Style="{DynamicResource LabelStyle}"/>
        <Label Content="Orientation:" HorizontalAlignment="Left" Margin="250,109,0,0" VerticalAlignment="Top" Width="85" Style="{DynamicResource LabelStyle}"/>
        <Label Content="Check-in:" HorizontalAlignment="Left" Margin="30,151,0,0" VerticalAlignment="Top" Width="85" Style="{DynamicResource LabelStyle}"/>
